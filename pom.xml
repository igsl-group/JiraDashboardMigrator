        <!--
            11.3.1 of jira-api is the latest stable version found.
            1000.30.0 references jira-components 1000.30.0, which does not exist in Atlassian's maven. Only 1000.29.0 exists.
            1000.29.0 references tenant-context-api 0.1.2, which does not exist in Atlassian's maven. Only 0.1.0 exists.
            
            11.3.1 still references commmons-httpclient, which got renamed twice to httpclient5 with breaking changes.
        -->
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>jira-api</artifactId>
            <version>11.3.1</version>
            <scope>provided</scope>
            <exclusions>
